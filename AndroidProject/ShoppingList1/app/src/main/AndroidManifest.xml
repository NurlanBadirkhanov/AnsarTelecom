<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neco_desarrollo.shoppinglist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/sklad"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sklad"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingListRed">
        <activity
            android:name=".activities.MainActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ShopListActivity"
            android:exported="true" />
        <activity
            android:name=".activities.NewNoteActivity"
            android:exported="true"
            android:theme="@style/Theme.NewNoteRed"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>